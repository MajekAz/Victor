<IfModule mod_rewrite.c>
    RewriteEngine On
    # Ensure Authorization header is passed to PHP
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# Prevent directory listing (hides file list)
Options -Indexes

# Allow cross-origin requests
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# PROTECT SENSITIVE FILES
# Deny direct HTTP access to config files, but allow server-side includes.
<FilesMatch "^(config\.php|config\.sample\.php|db_connect\.php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>